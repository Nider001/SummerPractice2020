@model RatingVM

@{
    ViewBag.Title = "Rate shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("RateShop", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ID)
                        @Html.TextBoxFor(m => m.ID, "", new { @class = "form-control", @placeholder = "ID" })
                        @Html.ValidationMessageFor(m => m.ID, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Rating")
                        @Html.DropDownListFor(m => m.SelectedRating, Model.Options, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SelectedRating, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-danger" value="Apply" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>